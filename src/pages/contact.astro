---
import BrowserWindow from "../components/BrowserWindow.astro";
import Layout from "../layouts/Layout.astro";
import SocialLink from "../components/SocialLink.astro";
---

<Layout title="Contact">
  <BrowserWindow url="contact.me">
    <div
      class="flex h-full w-full flex-col items-center justify-center bg-gray-700"
    >
      <h1 class="text-white font-JetbrainsMono mb-2 text-xl underline">
        Contact Me:
      </h1>
      <div class="flex flex-row">
        <h2 class="text-white font-JetbrainsMono">Email:</h2>
        <a
          class="text-white font-JetbrainsMono hover:text-orange-600 ml-2"
          href="mailto:david@dapice.dev"
        >
          david@dapice.dev</a
        >
      </div>
      <div class="flex flex-row">
        <h2 class="text-white font-JetbrainsMono">LinkedIn:</h2>
        <a
          class="text-white font-JetbrainsMono hover:text-orange-600 ml-2"
          href="https://www.linkedin.com/in/david-dapice"
          target="#blank"
        >
          David D'Apice</a
        >
      </div>
      <h2 class="text-white font-JetbrainsMono mt-10 mb-2 text-xl underline">
        Socials:
      </h2>
      <div class="flex flex-row">
        <SocialLink
          platform="Instagram"
          link="https://www.instagram.com/iamdrdigital/"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            viewBox="0 0 24 24"
            class="w-full h-full"
            ><g fill="none" stroke="#ffff" stroke-width="1.5"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 16a4 4 0 1 0 0-8a4 4 0 0 0 0 8"></path><path
                d="M3 16V8a5 5 0 0 1 5-5h8a5 5 0 0 1 5 5v8a5 5 0 0 1-5 5H8a5 5 0 0 1-5-5Z"
              ></path><path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m17.5 6.51l.01-.011"></path></g
            ></svg
          >
        </SocialLink>
        <SocialLink platform="Github" link="https://github.com/scrimmie">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            viewBox="0 0 24 24"
            class="w-full h-full"
            ><path
              fill="white"
              d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
            ></path></svg
          >
        </SocialLink>
      </div>
      <h2 class="text-white font-JetbrainsMono mt-10 mb-2 text-xl underline">
        Lets Work Together!
      </h2>
      <SocialLink platform="Resume" link="/David_D'Apice_Resume.pdf">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 20 20"
          class="w-full h-full"
          ><path
            fill="white"
            fill-rule="evenodd"
            d="M5.8 14H5v1h.8c.3 0 .5-.2.5-.5s-.2-.5-.5-.5M11 2H3v16h13V7zM7.2 14.6c0 .8-.6 1.4-1.4 1.4H5v1H4v-4h1.8c.8 0 1.4.6 1.4 1.4zm4.1.5c0 1-.8 1.9-1.9 1.9H8v-4h1.4c1 0 1.9.8 1.9 1.9zM15 14h-2v1h1.5v1H13v1h-1v-4h3zm0-2H4V3h7v4h4zm-5.6 2H9v2h.4c.6 0 1-.4 1-1s-.5-1-1-1"
            clip-rule="evenodd"></path></svg
        >
      </SocialLink>
    </div>
  </BrowserWindow>
</Layout>
