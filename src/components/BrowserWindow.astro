---
interface Props {
  url: string;
}
const { url } = Astro.props;
---

<div class="absolute inset-0 flex items-center justify-center m-24">
  <div class="flex h-full w-full flex-col border-2 border-zinc-400">
    <div
      class="flex h-7 min-w-full flex-row border-b-2 border-zinc-400 bg-zinc-700"
    >
      <div
        class="flex aspect-square w-7 flex-col items-center justify-center border-r border-zinc-400 p-1.5"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 32 32"
        >
          <path
            fill="white"
            d="M17.414 16L24 9.414L22.586 8L16 14.586L9.414 8L8 9.414L14.586 16L8 22.586L9.414 24L16 17.414L22.586 24L24 22.586z"
          ></path>
        </svg>
      </div>
      <div class="flex border-r border-zinc-400 p-1.5 w-min aspect-square">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 32 32"
        >
          <path
            fill="none"
            stroke="white"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 8h22M5 16h22M5 24h22"></path>
        </svg>
      </div>
      <div class="border-r border-zinc-400 p-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 20 20"
        >
          <path
            fill="white"
            d="M4 2a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h3v2H5.5a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1H13v-2h3a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm8 13v2H8v-2zM3 4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v9a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1z"
          ></path>
        </svg>
      </div>
      <div
        class="flex aspect-square w-full flex-row items-center justify-center pr-12 font-JetbrainsMono text-white"
      >
        <svg
          class="w-5 pr-2"
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 24 24"
        >
          <path
            fill="white"
            d="M6 9V7.25C6 3.845 8.503 1 12 1s6 2.845 6 6.25V9h.5a2.5 2.5 0 0 1 2.5 2.5v8a2.5 2.5 0 0 1-2.5 2.5h-13A2.5 2.5 0 0 1 3 19.5v-8A2.5 2.5 0 0 1 5.5 9Zm-1.5 2.5v8a1 1 0 0 0 1 1h13a1 1 0 0 0 1-1v-8a1 1 0 0 0-1-1h-13a1 1 0 0 0-1 1m3-4.25V9h9V7.25c0-2.67-1.922-4.75-4.5-4.75c-2.578 0-4.5 2.08-4.5 4.75"
          ></path>
        </svg>
        <h1 class="text-sm">{url}</h1>
      </div>
    </div>
    <div class="flex h-full w-full max-h-full overflow-scroll relative">
      <slot />
    </div>
  </div>
</div>
